#!/usr/bin/groovy


def helloworld, jsonlint


node {
    stage("Simple Load") {
        dir("loaders") {
            deleteDir()
            git url: 'https://github.com/mramanathan/jenkins_pipeline_demo.git', branch: 'remote_loader'
            echo "~> Before the remote loader gets in to action..."
            fileLoader.withGit('https://github.com/mramanathan/jenkins_pipeline_remote_loader_libs.git', 'master', null, 'linux') {
                helloworld = fileLoader.load('bin/echoMessage.groovy')
                jsonlint = fileLoader.load('bin/jsonprocess.groovy')
            }
        }
    }

    stage("Remote Loaders") {
        dir("loaders") {
            def jsonfile = "test.json"
            helloworld.echome("Mr.Jenkins!!!")
            echo "~> Actually, this is JSON lint, but too many ymls to be changed to JSON!!!"
            jsonlint.lint_deploy("${jsonfile}", helloworld)
        }
    }
}
